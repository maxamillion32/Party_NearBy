<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/header_2" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:layout_marginLeft="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:maxLines="3"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="normal"
            android:textSize="@dimen/font_size_large" />


        <ImageButton
            android:id="@+id/time_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:layout_below="@+id/title"
            android:background="@drawable/ic_room_24dp" />

        <TextView
            android:id="@+id/address"
            android:paddingLeft="@dimen/text_padding"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/time_img"
            android:text="Dadar, New Delhi, Wed, 10 AM - 9 PM"
            android:singleLine="false"
            android:textSize="12sp"
            android:layout_below="@+id/title"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:layout_alignParentRight="true"
            android:maxLines="3"
            android:layout_marginRight="@dimen/text_padding"
            android:padding="5dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_padding"
            android:text="1"

            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="@color/blue_grey"
            android:textSize="14dp" />

        <View
            android:id="@+id/line1"
            android:layout_below="@+id/book"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_grey"/>

        <TextView
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:maxLines="3"
            android:padding="5dp"
            android:text="Date"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_default"/>

        <TextView
            android:id="@+id/datetime"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_padding"
            android:layout_marginEnd="@dimen/text_padding"
            android:maxLines="3"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="19 June"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="normal"
            android:textSize="@dimen/font_size_default"/>

        <View
            android:id="@+id/line2"
            android:layout_below="@+id/datetime"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_grey"/>

        <TextView
            android:layout_below="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:maxLines="3"
            android:padding="5dp"
            android:text="Entry Time"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_default"/>

        <TextView
            android:id="@+id/entrytime"
            android:layout_below="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_padding"
            android:layout_marginEnd="@dimen/text_padding"
            android:maxLines="3"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="11:00 PM"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="normal"
            android:textSize="@dimen/font_size_default"/>

        <View
            android:id="@+id/line3"
            android:layout_below="@+id/entrytime"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_grey"/>

        <TextView
            android:layout_below="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:maxLines="3"
            android:visibility="visible"
            android:padding="5dp"
            android:text="Ticket No"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_default"/>

        <TextView
            android:id="@+id/ticket_no"
            android:layout_below="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_padding"
            android:layout_marginEnd="@dimen/text_padding"
            android:maxLines="3"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:visibility="visible"
            android:text="001P"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="normal"
            android:textSize="@dimen/font_size_default"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>